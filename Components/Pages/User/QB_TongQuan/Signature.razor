@page "/signature"
@using FROASTERY.Models

<section id='signature'>
    <img src='./images/decor1.png' alt='decor' class='signature-decor-left' />
    <img src='./images/decor2.png' alt='decor' class='signature-decor-right' />
    <div class='signature-container'>
        <h2 class='signature-heading'>"The Signature" của chúng tôi</h2>
        <img alt='decor' src='./images/coffee-cup.png' class='signature-coffee-cup' />
        @foreach (var item in Signatures)
        {
            <article class="signature-item @(Signatures.IndexOf(item) % 2 == 0 ? "" : "signature-item-reversed")">
                <img alt='signature' src="@item.ImageUrl" class='signature-image' />
                <div class='signature-details-desktop'>
                    <h3 class='signature-title-desktop'>@item.Title</h3>
                    <p class='signature-description-desktop'>@item.Description</p>
                    <p class='signature-quote-desktop'><i class='signature-quote-icon'>~ @item.Quote ~</i></p>
                </div>
                <div class='signature-details-mobile'>
                    <h3 class='signature-title-mobile'>@item.Title</h3>
                    <p class='signature-quote-mobile'><i class='signature-quote-icon-mobile'>~ @item.Quote ~</i></p>
                </div>
            </article>
        }
    </div>
</section>


<style>
    #signature {
        margin-top: 1rem;
        background-color: #eceae3;
        position: relative;
        padding-top: 2rem;
        padding-bottom: 2rem;
        overflow: hidden;
    }

    .signature-decor-left {
        position: absolute;
        top: 40%;
        left: 0;
        z-index: 0;
    }

    .signature-decor-right {
        position: absolute;
        bottom: 5%;
        right: 0;
    }

    .signature-container {
        max-width: 1300px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 2rem;
        padding: 1rem;
        display: flex;
        flex-direction: row;
        gap: 2rem;
        overflow-x: auto;
        align-items: flex-start; /* Căn chỉnh các item theo top */
    }
    .signature-heading {
        font-size: 2rem;
        text-align: center;
        font-weight: bold;
        margin-bottom: 2rem;
         
    }
    .signature-coffee-cup {
        display: block;
        height: 20px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 1rem;
    }

    .signature-item {
        margin-top: 1rem;
        display: flex;
        flex-direction: column; /* Sắp xếp dọc */
        gap: 0.5rem; /* Giảm khoảng cách giữa các phần tử trong item */
        align-items: center; /* Căn giữa theo chiều ngang trong item */
        text-align: center; /* Căn giữa text */
        min-width: 250px; /* Điều chỉnh chiều rộng tối thiểu */
    
    }

    .signature-item-reversed {
        /* Không cần thiết khi flex-direction là row trên container */
    }

    .signature-image {
        width: 100%;
        height: 100%;
        max-height: 300px; /* Giảm chiều cao tối đa của ảnh */
        object-fit: cover; /* Đảm bảo ảnh không bị méo và được crop vừa khung */
        border-radius: 0.5rem; /* Thêm chút bo tròn cho ảnh */
    }

    .signature-details-desktop {
        display: block;
    }

    .signature-title-desktop {
        font-size: 1.1rem; /* Giảm kích thước title */
        margin-bottom: 0.3rem;
    }

    .signature-description-desktop {
        margin-top: 0.3rem;
        margin-bottom: 0.3rem;
        font-family: 'Nunito', sans-serif;
        font-size: 0.8rem; /* Giảm kích thước description */
    }

    .signature-quote-desktop {
        text-align: center; /* Căn giữa quote */
        font-family: 'Birthstone', cursive;
        font-size: 0.9rem; /* Giảm kích thước quote */
    }

    .signature-quote-icon {
        font-size: 1rem;
        color: #b3a350;
        margin-right: 0.2rem;
    }

    .signature-details-mobile {
        display: none;
    }

    media (min-width: 768px) {
        .signature-item {
            align-items: flex-start; /* Căn trái trên desktop */
            text-align: left; /* Căn trái text trên desktop */
        }

        .signature-image {
            max-height: 250px; /* Điều chỉnh lại chiều cao ảnh trên desktop */
        }

        .signature-quote-desktop {
            text-align: right; /* Căn phải quote trên desktop */
        }
    }

    media (max-width: 767px) {
        .signature-container {
            /* Có thể giữ nguyên hoặc điều chỉnh nếu cần */
        }

        .signature-item {
            min-width: 90%; /* Tăng chiều rộng trên mobile */
        }

        .signature-details-mobile {
            display: block;
        }

        .signature-details-desktop {
            display: none;
        }
    }
</style>

